# 3dPot Backend - Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_PATH=./database/3dpot.db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ESP32 Configuration (Monitor de Filamento)
ESP32_ENABLED=true
MQTT_SERVER=localhost
MQTT_PORT=1883
MQTT_USERNAME=3dpot
MQTT_PASSWORD=3dpot2025
ESP32_WS_PORT=81

# Arduino Configuration (Esteira Transportadora)
ARDUINO_ENABLED=true
ARDUINO_SERIAL_PORT=/dev/ttyUSB0
ARDUINO_BAUD_RATE=9600

# Raspberry Pi Configuration (Estação QC)
RASPBERRY_PI_ENABLED=true
RASPBERRY_PI_HOST=192.168.1.100
RASPBERRY_PI_PORT=5000
RASPBERRY_PI_USER=pi
RASPBERRY_PI_PASSWORD=raspberry

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_COLORIZE=true
LOG_PATH=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Security Configuration
CORS_ORIGIN=http://localhost:3000
COOKIE_SECRET=your-cookie-secret-change-in-production

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL_TO=alerts@3dpot.local

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Production Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
FORCE_HTTPS=false

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60
DEVICE_TIMEOUT=300
MAX_RECONNECT_ATTEMPTS=3
